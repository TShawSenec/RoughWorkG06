<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/nav_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/navbarC"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/orange"
            android:text="Fitness Tracker"
            ></TextView>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/menulogout"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="3"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:src="@drawable/ic_exit_to_app_black_24dp"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="50pt"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:text="Logout"/>
            <ImageView
                android:layout_gravity="fill_vertical"
                android:layout_weight="1"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:src="@drawable/ic_chevron_right_black_24dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menuprofile"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="3"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:src="@drawable/ic_image_black_24dp"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="50pt"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:text="View Profile"/>
            <ImageView
                android:layout_gravity="fill_vertical"
                android:layout_weight="1"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:src="@drawable/ic_chevron_right_black_24dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menuExercises"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="3"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:src="@drawable/ic_access_alarm_black_24dp"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="50pt"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:text="Exercises"/>
            <ImageView
                android:layout_gravity="fill_vertical"
                android:layout_weight="1"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:src="@drawable/ic_chevron_right_black_24dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menuworkout"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="3"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:src="@drawable/ic_content_paste_black_24dp"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="50pt"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:text="Workouts"/>
            <ImageView
                android:layout_gravity="fill_vertical"
                android:layout_weight="1"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:src="@drawable/ic_chevron_right_black_24dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menustartworkout"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="3"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:src="@drawable/ic_event_available_black_24dp"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="50pt"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:text="Start Workout"/>
            <ImageView
                android:layout_gravity="fill_vertical"
                android:layout_weight="1"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:src="@drawable/ic_chevron_right_black_24dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menugoals"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="3"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:src="@drawable/ic_event_available_black_24dp"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="50pt"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:text="Goals"/>
            <ImageView
                android:layout_gravity="fill_vertical"
                android:layout_weight="1"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:src="@drawable/ic_chevron_right_black_24dp"/>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>